import unittest


def reverse(list_of_chars):
    if (not list_of_chars) or (len(list_of_chars) == 1):
        return 

    middle_index = len(list_of_chars) // 2
    current_left_index = middle_index

    if (len(list_of_chars) % 2 == 0):
        # List length is an even number
        current_left_index = middle_index - 1
        current_right_index = middle_index

    else:
        # List length is an odd number
        # middle element stays in place
        current_left_index = middle_index - 1
        current_right_index = middle_index + 1
    
    while current_left_index >= 0:
        list_of_chars[current_left_index], list_of_chars[current_right_index] =  \
            list_of_chars[current_right_index], list_of_chars[current_left_index]
        # c = list_of_chars[current_left_index]
        # list_of_chars[current_left_index] = list_of_chars[current_right_index]
        # list_of_chars[current_right_index] = c
        
        current_left_index -= 1
        current_right_index += 1
 

# Tests

class Test(unittest.TestCase):

    def test_empty_string(self):
        list_of_chars = []
        reverse(list_of_chars)
        expected = []
        self.assertEqual(list_of_chars, expected)

    def test_single_character_string(self):
        list_of_chars = ['A']
        reverse(list_of_chars)
        expected = ['A']
        self.assertEqual(list_of_chars, expected)

    def test_longer_string(self):
        list_of_chars = ['A', 'B', 'C', 'D', 'E']
        reverse(list_of_chars)
        expected = ['E', 'D', 'C', 'B', 'A']
        self.assertEqual(list_of_chars, expected)


unittest.main(verbosity=2)